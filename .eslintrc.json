{
    "plugins": [
        "mocha"
    ],
    "extends": [
        "plugin:mocha/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },

    "env": {
        "es6": true,
        "mocha": true
    },
    "rules": {
        "mocha/no-mocha-arrows": "off",
        "mocha/no-hooks-for-single-case": "off",
        "no-await-in-loop": "off",
        "no-unused-expressions": "off",
        "no-console": "off"
    }
}