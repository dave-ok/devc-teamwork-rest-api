{
    "plugins": [
        "mocha"
    ],
    "extends": [
        "plugin:mocha/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },

    "env": {
        "es6": true,
        "mocha": true
    },
    "rules": {
        "mocha/no-mocha-arrows": "off"
    }
}